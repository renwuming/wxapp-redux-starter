<view class="container wrapper">
  <view class="top container">
    <image src="{{userInfo.avatarUrl}}" mode="aspectFit"></image>
    <text>{{userInfo.nickName}}</text>
    <button open-type="getUserInfo" bindgetuserinfo="login">{{loginText}}</button>
  </view>
  <view class="right container">
    <view class="item container">
      <image src="/images/icon_service.png" mode="aspectFit"></image>
      <contact-button class="contact" size="27"></contact-button>
      <text>意见反馈</text>
    </view>
    <view class="item container" bindtap="navigateTo" data-url="/pages/Setting/personal/about/index">
      <image src="/images/icon_about.png" mode="aspectFit"></image>
      <text>关于</text>
    </view>
  </view>
</view>