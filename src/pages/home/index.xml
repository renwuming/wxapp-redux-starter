<import src="../../components/toaster/index"></import>

<view class="container">
  <image class="bk" src="/images/bk.jpg" mode="aspectFill"></image>
  <view class="userinfo">
    <image src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text>{{userInfo.nickName}}</text>
  </view>
  <view class="container-h">
    <view class="btn" bindtap="goto">
      <image src="/images/q.jpg" mode="aspectFill"></image>
      <text>趣味测试</text>
    </view>
  </view>

  <template is="toaster" data="{{...toasterData}}"></template>
</view>
